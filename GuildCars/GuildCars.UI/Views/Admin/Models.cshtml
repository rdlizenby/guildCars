@model GuildCars.UI.Models.ViewModels.ModelsVM

@{
    ViewBag.Title = "Models";
    Layout = "~/Views/Shared/User_Layout.cshtml";
}

<h2>Models</h2>

@using (Html.BeginForm("Models", "Admin", FormMethod.Post, new { @class = "form-inline form" }))
{
    @Html.ValidationSummary();
    <div class="row" style="border:solid 1px black">
        <div class="form-group" style="padding-top:10px;padding-bottom:10px">
            <label for="newMake" style="padding-left:10px">New Model</label>
            @Html.TextBoxFor(m => m.NewModel, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label for="makes">Make</label>
            @Html.DropDownListFor(m => m.MakeId, Model.Makes, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label for="bodystyle">Bodystyle</label>
            @Html.DropDownListFor(m => m.BodystyleId, Model.BodyStyles, new { @class = "form-control" })
        </div>
        <button type="submit" class="btn btn-default">Save</button>
    </div>
}
<div class="row">
    <div class="col-md-5">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Model</th>
                    <th>Make</th>
                    <th>Bodystyle</th>
                    <th>Date Added</th>
                    <th>User</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var m in Model.Models)
                {
                    <tr>
                        <td>@m.ModelName</td>
                        <td>@m.MakeName</td>
                        <td>@m.BodystyleName</td>
                        <td>@m.DateAdded.ToString("MM/dd/yyyy")</td>
                        <td>@m.Email</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="col-md-7">
    </div>
</div>